sudo apt install -y gcc emacs curl git xclip htop

# additional programs:
# sudo apt install -y entr ncdu python3-pip

# generate ssh key (you will have to type in the location of the file where you would like to save the private key)
ssh-keygen -t rsa
eval $(ssh-agent -s)
ssh-add ~/.ssh/id_rsa

# copy the ssh, you will have to paste in into github manually
xclip -sel clip < ~/.ssh/id_rsa.pub

curl -sS https://download.spotify.com/debian/pubkey.gpg | sudo apt-key add - 
echo "deb http://repository.spotify.com stable non-free" | sudo tee /etc/apt/sources.list.d/spotify.list

sudo apt-get update && sudo apt-get install spotify-client
